{
  "name": "CNX Bridge",
  "version": "0.4.7",
  "manifest_version": 2,
  "description": "UI Enhancement Layer for CNX Legacy Editor with revision control",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["app/bg/background.js"],
    "persistent": true
  },
  "options_page": "app/options/options.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "CNX Bridge",
    "default_popup": "app/menu/menu.html"
  },
  "web_accessible_resources" : [
    "app/jax/jax.config.js",
    "app/jax/jax.js"
  ],
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "notifications",
    "https://*/*",
    "http://*/*",
    "activeTab",
    "storage",
    "tabs"
  ],
  "omnibox": {
    "keyword": "cnxb"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://legacy.cnx.org/*/module*"
      ],
      "js": [
        "app/content/content.js"
      ],
       "run_at": "document_end"
    }
  ]
}
